<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CheckRecordsController"
            prefWidth="900" prefHeight="560">

    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <Label text="Check Records" style="-fx-font-size:18px; -fx-font-weight:bold;" />
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Bill #:"/>
                <TextField fx:id="txtBillNumber" prefWidth="100"/>
                <Label text="Buyer Name:"/>
                <TextField fx:id="txtBuyerName" prefWidth="180"/>
                <Label text="Date From:"/>
                <DatePicker fx:id="dpFrom"/>
                <Label text="To:"/>
                <DatePicker fx:id="dpTo"/>
                <Button text="Search" fx:id="btnSearch" onAction="#handleSearch"/>
                <Button text="Reset" fx:id="btnReset" onAction="#handleReset"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" fx:id="btnBack" onAction="#handleBack"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.45" prefHeight="480">
            <!-- Left: bills list -->
            <AnchorPane>
                <TableView fx:id="tblBills" AnchorPane.topAnchor="6" AnchorPane.bottomAnchor="6" AnchorPane.leftAnchor="6" AnchorPane.rightAnchor="6">
                    <columns>
                        <TableColumn fx:id="colBillId" text="Bill #" prefWidth="80"/>
                        <TableColumn fx:id="colBillDate" text="Date" prefWidth="190"/>
                        <TableColumn fx:id="colBuyer" text="Buyer" prefWidth="170"/>
                        <TableColumn fx:id="colGrandTotal" text="Grand Total" prefWidth="120"/>
                    </columns>
                </TableView>
            </AnchorPane>

            <!-- Right: selected bill details (read-only) -->
            <AnchorPane>
                <VBox spacing="8" AnchorPane.topAnchor="6" AnchorPane.bottomAnchor="6" AnchorPane.leftAnchor="6" AnchorPane.rightAnchor="6">
                    <GridPane hgap="8" vgap="6">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <Label text="Buyer Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="lblBuyerName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Buyer Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="lblBuyerPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Subtotal:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="lblSubtotal" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Discount Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="lblDiscountAmount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Grand Total:" style="-fx-font-weight:bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="lblGrandTotal" style="-fx-font-weight:bold;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Label text="Items:" style="-fx-font-weight:bold; -fx-padding:8 0 0 0;"/>
                    <TableView fx:id="tblItems" prefHeight="220">
                        <columns>
                            <TableColumn fx:id="colItemProduct" text="Product" prefWidth="220"/>
                            <TableColumn fx:id="colItemQty" text="Qty" prefWidth="80"/>
                            <TableColumn fx:id="colItemPrice" text="Unit Price" prefWidth="100"/>
                            <TableColumn fx:id="colItemTotal" text="Item Total" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </SplitPane>
    </center>

</BorderPane>
